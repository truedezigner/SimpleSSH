{
  "name": "simplessh",
  "version": "0.1.0",
  "main": "dist-electron/main/index.js",
  "description": "SimpleSSH desktop SFTP sync client.",
  "author": "TrueDezigner",
  "license": "MIT",
  "private": true,
  "productName": "SimpleSSH",
  "debug": {
    "env": {
      "VITE_DEV_SERVER_URL": "http://127.0.0.1:7777/"
    }
  },
  "type": "module",
  "scripts": {
    "start": "vite",
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "build:win": "tsc && vite build && electron-builder --win portable",
    "build:mac": "tsc && vite build && electron-builder --mac",
    "preview": "vite preview",
    "make:ico": "powershell -ExecutionPolicy Bypass -File scripts\\make-ico.ps1",
    "make:dev-shortcut": "powershell -ExecutionPolicy Bypass -File scripts\\make-dev-shortcut.ps1",
    "pretest": "vite build --mode=test",
    "test": "vitest run"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "@types/ssh2": "^1.15.5",
    "chokidar": "^3.6.0",
    "codex": "^0.2.3",
    "electron-updater": "^6.3.9",
    "keytar": "^7.9.0",
    "monaco-editor": "^0.55.1",
    "p-queue": "^8.0.1",
    "ssh2": "^1.17.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "electron": "^33.2.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.49",
    "postcss-import": "^16.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.4.2",
    "vite": "^5.4.11",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vitest": "^2.1.5"
  }
}
